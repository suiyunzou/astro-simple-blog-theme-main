---
import config from "@config/config.json";
import Layout from "@layouts/index.astro";
import List from "@components/List.astro";
import { getContent } from "@lib/contentParser.astro";
import { getCategories } from "@lib/categoriesParser.astro";
import { sortByDate } from "@lib/utils/sortFunctions";

export async function getStaticPaths({ paginate }) {
  const allCategories = await getCategories(config.settings.blog_folder);
  let allPosts = await getContent(config.settings.blog_folder);

  allPosts = sortByDate(allPosts);

  return Array.from(allCategories).flatMap((categorie) => {
    const filteredPosts = allPosts.filter(
      (post: any) =>
        post.data.categories && post.data.categories.includes(categorie)
    );
    return paginate(filteredPosts, {
      params: { categorie },
      pageSize: config.settings.pagination,
    });
  });
}

const { page } = Astro.props;
const { categorie } = Astro.params;
---

<Layout title={categorie}>
  <List title={categorie} page={page} url={`categories/${categorie}/`} />
</Layout>
